{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "noImplicitThis": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
